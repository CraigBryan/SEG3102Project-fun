<!-- Styling has not been tested yet -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <% if @visits.size == 0 || @visits.nil? %>

      <p>Nothing in your visiting list</p>

    <% else %>

      <%= will_paginate %>

      <table class="table">
        <thead>
          <tr>
            <th>Property</th>
            <th>Date</th>
            <th>Time</th>
          </tr>
        </thead>

        <tbody>

          <% @visits.each do |visit| %>
            <tr class="text-center">
              <td><%= link_to visit.property.address, visit.property %></td>
              <td><%= visit.date %></td>
              <td><%= visit.time %></td>
              <td><%= button_to "Remove from visiting list", visit, method: :delete, data: { confirm: 'Are you sure?' } %></td> <!-- Is the same as a button to bootstrap?-->
            </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
    <%= will_paginate %>
  </div>
</div>
