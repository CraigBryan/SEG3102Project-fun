<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <% if @visits.size == 0 || @visits.nil? %>

      <h3>Nothing in your visiting list. Please go to <%= link_to "Properties", properties_path, class: "link" %> to add a property to your visiting list.</h3>

    <% else %>

      <%= will_paginate %>

      <table class="table">
        <thead>
          <tr>
            <th>Property</th>
            <th>Date</th>
            <th>Time</th>
            <th>Remove from List</th>
          </tr>
        </thead>

        <tbody>

          <% @visits.each do |visit| %>
            <tr class="text-left">
              <td><%= visit.property.address %></td>
              <td><%= visit.date %></td>
              <td><%= visit.time %></td>
              <td class="text-center">
                <%= link_to visit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger btn-xs button' do %>
                 <span class="glyphicon glyphicon-trash"></span>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
    <%= will_paginate %>
  </div>
</div>
