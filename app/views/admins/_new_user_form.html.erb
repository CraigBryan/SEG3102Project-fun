<%= form_for @user, url: admins_create_user_by_admin_path do |f| %>
  	
  	<div>
		<%= f.label :email %><br>
		<%= f.text_field :email %><br>
	</div>

	<div>
		<%= f.label :role %><br>
		<% num = 0 %>
		<%= collection_radio_buttons :role, :roles, Role.all, :id, :name do |b| %>
			<%= b.label %>
			<%= b.label { b.radio_button(id: num)} %>
			<% num += 1 %>
		<% end %>	
	</div>

	<div>
		<%= f.label :first_name %><br>
		<%= f.text_field :first_name %><br>
	</div>
	
	<div>
		<%= f.label :last_name %><br>
		<%= f.text_field :last_name %><br>
	</div>

	<div id="customer_name" style="display: none">
		<%= f.label :max_rent %><br>
		<%= f.text_field :max_rent %><br>
	
	</div>	

	<div>
		<%= f.label :password %><br>
		<%= f.text_field :password %><br>
	</div>

	<div>
		<%= f.label :password_confirmation %><br>
		<%= f.text_field :password_confirmation %><br>
	</div>

	<div>
		<%= f.submit %>
	</div>

<% end %>